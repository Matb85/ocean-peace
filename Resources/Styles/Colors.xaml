<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="Primary1">#3772FF</Color>
    <Color x:Key="Primary2">#66C3FF</Color>
    <Color x:Key="Secondary1">#6F58C9</Color>
    <Color x:Key="Secondary2">#FCBA04</Color>
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <SolidColorBrush x:Key="Primary1Brush" Color="{StaticResource Primary1}"/>
    <SolidColorBrush x:Key="Primary2Brush" Color="{StaticResource Primary2}"/>
    <SolidColorBrush x:Key="Secondary1Brush" Color="{StaticResource Secondary1}"/>
    <SolidColorBrush x:Key="Secondary2Brush" Color="{StaticResource Secondary2}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <LinearGradientBrush x:Key="PrimaryGradient" EndPoint="1,0">
        <GradientStop
            Color="#66C3FF"
            Offset="0.0"/>
        <GradientStop 
            Color="#3772FF"
            Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Warning" EndPoint="0,1">
        <GradientStop
        Color="#FF6666"
        Offset="0.0"/>
        <GradientStop 
        Color="#FF3030"
        Offset="0.1"/>
    </LinearGradientBrush>

</ResourceDictionary>